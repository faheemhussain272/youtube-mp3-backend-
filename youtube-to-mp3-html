  <script>
    function convert() {
      let url = document.getElementById("yt").value.trim();
      if (!url) {
        alert("Please enter a YouTube URL.");
        return;
      }
      window.open(`https://YOUR-BACKEND-URL.up.railway.app/convert?url=${encodeURIComponent(url)}`, '_blank');
    }
